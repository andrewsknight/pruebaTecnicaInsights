# Call Assignment System - Environment Variables Example
# Copy this file to .env and adjust values for your environment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/call_assignment

# =============================================================================
# REDIS CONFIGURATION  
# =============================================================================
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_HOST=0.0.0.0
API_PORT=8000

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Maximum time allowed for call assignment (milliseconds)
MAX_ASSIGNMENT_TIME_MS=100

# =============================================================================
# CALL DURATION PARAMETERS
# =============================================================================
# Call duration follows normal distribution with these parameters
CALL_DURATION_MEAN=180.0      # 3 minutes average
CALL_DURATION_STD=180.0       # 3 minutes standard deviation

# =============================================================================
# WEBHOOK CONFIGURATION
# =============================================================================
WEBHOOK_URL=http://localhost:8001/webhook
WEBHOOK_TIMEOUT=5

# =============================================================================
# TEST CONFIGURATION
# =============================================================================
# Default test parameters
TEST_NUM_CALLS=100
TEST_NUM_AGENTS=20

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# =============================================================================
# SECURITY SETTINGS (Production)
# =============================================================================
# SECRET_KEY=your-secret-key-here
# JWT_SECRET=your-jwt-secret-here
# ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
# PROMETHEUS_ENABLED=true
# METRICS_PORT=9090
# HEALTH_CHECK_INTERVAL=30

# =============================================================================
# MULTI-TENANT SETTINGS (Future)
# =============================================================================
# DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001
# ENABLE_TENANT_ISOLATION=true

# =============================================================================
# CONVERSION MATRIX OVERRIDE (Optional)
# =============================================================================
# You can override the default conversion matrix by providing a JSON string
# CONVERSION_MATRIX_JSON='{"agente_tipo_1":{"llamada_tipo_1":0.35}}'

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# DEVELOPMENT_MODE=false
# DEBUG=false
# RELOAD_ON_CHANGE=false

# =============================================================================
# DOCKER COMPOSE OVERRIDES
# =============================================================================
# COMPOSE_PROJECT_NAME=call-assignment
# POSTGRES_DB=call_assignment
# POSTGRES_USER=user
# POSTGRES_PASSWORD=password
# REDIS_PASSWORD=your-redis-password